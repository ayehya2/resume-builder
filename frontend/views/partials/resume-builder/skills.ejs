<div class="section-content" id="skills-section">
    <h2 class="section-title">Skills</h2>
    <div id="skillsList">
        <div class="dynamic-section skill-item">
            <button type="button" class="remove-button">Remove</button>
            <div class="form-row">
                <div class="form-group">
                    <label class="form-label">Name</label>
                    <input type="text" class="glass-input skill-name" name="skill-name"
                        placeholder="Programming Languages">
                </div>
                <div class="form-group">
                    <label class="form-label">Keywords</label>
                    <div class="skill-keywords-container">
                        <!-- Pills will be inserted here -->
                        <div class="skill-keyword-item">
                            <input type="text" class="glass-input skill-keyword-input" name="skill-keyword"
                                value="Example" placeholder="Skill">
                            <button type="button" class="remove-skill-keyword-btn"><i class="fas fa-times"></i></button>
                        </div>

                        <!-- The 'Add New' Input acts as a pill creation trigger -->
                        <div class="new-keyword-input-wrapper">
                            <input type="text" class="glass-input new-skill-keyword" placeholder="+ Add skill..."
                                style="height: 32px; font-size: 0.85rem; padding: 4px 8px;">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <button type="button" class="add-button" data-target="skillsList">
        <i class="fas fa-plus me-1"></i>Add Skill
    </button>
</div>