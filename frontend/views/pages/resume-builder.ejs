<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resume Builder - TalentScope</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/pages/resume-builder.css" rel="stylesheet">
    <link href="/css/components/formatting.css" rel="stylesheet">

    <!-- PDF.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.min.js"></script>

    <!-- Immediate Theme Application -->
    <script>
        (function () {
            const savedTheme = localStorage.getItem('theme');
            if (savedTheme === 'dark') {
                document.documentElement.setAttribute('data-theme', 'dark');
                document.body.classList.add('theme-dark');
            }
        })();
    </script>
</head>

<body>
    <main class="resume-main">
        <%- include('../partials/resume-builder/sidebar') %>

            <section class="resume-form">
                <h2 class="main-title mb-4">Resume Builder</h2>

                <form id="resumeForm" autocomplete="off">
                    <%- include('../partials/resume-builder/templates') %>
                        <%- include('../partials/resume-builder/formatting') %>
                            <%- include('../partials/resume-builder/profile') %>
                                <%- include('../partials/resume-builder/education') %>
                                    <%- include('../partials/resume-builder/work') %>
                                        <%- include('../partials/resume-builder/skills') %>
                                            <%- include('../partials/resume-builder/projects') %>
                                                <%- include('../partials/resume-builder/awards') %>
                </form>
            </section>

            <section class="resume-preview">
                <div id="previewContainer">
                    <div class="preview-placeholder">
                        <i class="fas fa-file-pdf fa-3x mb-3"></i>
                        <p>Building your live preview...</p>
                    </div>
                </div>
            </section>
    </main>

    <!-- Modal for Resume Load Confirmation -->
    <div class="modal fade" id="resumeLoadConfirmModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content glass-card">
                <div class="modal-header">
                    <h5 class="modal-title">Load Resume?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to load this resume? Current unsaved changes will be lost.</p>
                    <div id="resumeLoadDetails" class="p-3 bg-dark-subtle rounded"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" id="confirmLoadResumeBtn" class="btn btn-primary">Load Now</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <!-- <script src="/js/resume-simple-fixed.js"></script> -->

    <!-- Modular Scripts -->
    <script src="/js/resume-builder/data-manager.js"></script>
    <script src="/js/resume-builder/formatting-manager.js"></script>
    <script src="/js/resume-builder/preview-manager.js"></script>
    <script src="/js/resume-builder/ui-manager.js"></script>

    <script>
        // Global Glue Code
        window.collectResumeData = () => window.DataManager.collectResumeData();

        document.addEventListener('DOMContentLoaded', () => {
            console.log('ðŸš€ Modular Resume Builder Initializing...');

            // Initialize Managers
            if (window.UIManager) window.UIManager.init();
            if (window.FormattingManager) window.FormattingManager.init();
            if (window.PreviewManager) window.PreviewManager.init();

            // Handle initial data from server
            <% if (typeof resumeData !== 'undefined' && resumeData) { %>
                console.log('ðŸ“‹ Loading server-provided resume data');
                const serverData = <% - JSON.stringify(resumeData) %>;
                window.DataManager.populateForm(serverData);
                window.DataManager.currentResumeId = '<%= typeof resumeId !== "undefined" ? resumeId : "" %>';
            <% } %>

            // Live Preview - Form level listener
            const resumeForm = document.getElementById('resumeForm');
            if (resumeForm) {
                resumeForm.addEventListener('input', window.DataManager.debounce(() => {
                    console.log('ðŸ”„ Form input detected, updating preview...');
                    window.DataManager.triggerPreviewUpdate();
                }, 1000));
            }

            // Save functionality
            document.getElementById('saveResumeBtn')?.addEventListener('click', () => {
                const data = window.DataManager.collectResumeData();
                const title = prompt('Resume Title:', 'My Resume') || 'My Resume';

                fetch('/api/save-resume', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        resumeId: window.DataManager.currentResumeId,
                        title: title,
                        resumeData: data
                    })
                })
                    .then(res => res.json())
                    .then(res => {
                        if (res.success) {
                            window.DataManager.currentResumeId = res.resumeId;
                            window.showNotification('Resume saved successfully!', 'success');
                        } else {
                            window.showNotification('Error saving: ' + res.error, 'error');
                        }
                    });
            });
        });
    </script>
</body>

</html>